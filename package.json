{
  "name": "vscodeextension-sandbox",
  "publisher": "gerioldman",
  "displayName": "VSCodeExtension-Sandbox",
  "description": "sandbox project",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "view/title": [
        {
          "command": "component_editor.createComponent",
          "when": "view == component_editor",
          "group": "navigation"
        },
        {
          "command": "component_editor.generateProject",
          "when": "view == component_editor",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "component_editor.deleteComponent",
          "when": "view == component_editor && viewItem == component",
          "group": "inline"
        },
        {
          "command": "component_editor.createTestSuite",
          "when": "view == component_editor && viewItem == component",
          "group": "inline"
        },
        {
          "command": "component_editor.deleteTestSuite",
          "when": "view == component_editor && viewItem == testSuite",
          "group": "inline"
        },
        {
          "command": "component_editor.createTestCase",
          "when": "view == component_editor && viewItem == testSuite",
          "group": "inline"
        },
        {
          "command": "component_editor.deleteTestCase",
          "when": "view == component_editor && viewItem == testCase",
          "group": "inline"
        },
        {
          "command": "component_editor.goToTestCase",
          "when": "view == component_editor && viewItem == testCase",
          "group": ""
        }
      ]
    },
    "commands": [
      {
        "command": "component_editor.generateProject",
        "title": "Generate Project",
        "icon": "$(play)"
      },
      {
        "command": "component_editor.createComponent",
        "title": "Create Component",
        "icon": "$(add)"
      },
      {
        "command": "component_editor.deleteComponent",
        "title": "Delete Component",
        "icon": "$(trash)"
      },
      {
        "command": "component_editor.createTestSuite",
        "title": "Create TestSuite",
        "icon": "$(add)"
      },
      {
        "command": "component_editor.deleteTestSuite",
        "title": "Delete TestSuite",
        "icon": "$(trash)"
      },
      {
        "command": "component_editor.createTestCase",
        "title": "Create TestCase",
        "icon": "$(add)"
      },
      {
        "command": "component_editor.deleteTestCase",
        "title": "Delete TestCase",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "panel": [
        {
          "id": "unitbasedprojectexplorer",
          "title": "Unit-based Project Explorer",
          "icon": "resources/component.svg"
        }
      ]
    },
    "views":
    {
      "unitbasedprojectexplorer": [
        {
          "id": "component_editor",
          "name": "Component Editor"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "@vscode/test-electron": "^2.2.2",
    "eslint": "^8.33.0",
    "glob": "^8.1.0",
    "mocha": "^10.1.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@base2/pretty-print-object": "^1.0.2",
    "jsonc-parser": "^3.2.0"
  }
}
